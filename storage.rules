rules_version = '2';

// Firebase Storage rules for application forms (simplified for testing)
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public access to application forms (for development)
    match /application-forms/{fileName} {
      // Allow all operations for testing
      allow read, write: if true;
    }
    
    // Block all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
